\usepackage{xkeyval}
\usepackage{pgfplots}
%
\newlength\figureheight
\newlength\figurewidth
%
\makeatletter
\define@cmdkeys{figtools}[size@]{width, height}[60mm]
\setkeys{figtools}{width,height}
\newcommand{\figtools}[2][]{
    \setkeys{figtools}{#1}
    \setlength{\figureheight}{\size@height}
	\setlength{\figurewidth}{\size@width}
    \input{#2}
}
\makeatother
